{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "baseUrl": ".",
    "paths": {
      "@enso/core": ["packages/core/src"],
      "@enso/core/*": ["packages/core/src/*"],
      "@enso/ui": ["packages/ui/src"],
      "@enso/ui/*": ["packages/ui/src/*"],
      "@enso/lynx": ["packages/lynx/src"],
      "@enso/lynx/*": ["packages/lynx/src/*"]
    }
  }
}
